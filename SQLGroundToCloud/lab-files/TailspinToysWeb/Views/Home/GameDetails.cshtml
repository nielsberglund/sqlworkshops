@model TailspinToysWeb.Models.Game

@{
    ViewData["Title"] = "Game Details";
}

<h2>@Html.DisplayFor(model => model.Title)</h2>
<hr />
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Rating)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.IsOnlineMultiplayer)
        </dt>
        <dd>
            @if (Model.IsOnlineMultiplayer)
            {
                <img src="~/images/check-green.svg" alt="Has online pultiplayer gameplay" height="12" />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Home</a>
</div>